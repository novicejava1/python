#:kivy 1.11.1
#:import hex kivy.utils.get_color_from_hex

<MyScreen>:

  canvas:
    Color:
      rgba: hex('#9B1B30')
    Rectangle:
      pos: self.pos
      size: self.size
      source: 'seaside-forest.jpg'

  Screen:
    name: "first"
    BoxLayout:
      orientation: "vertical"
      #padding: 20, 20, 20, 20
      Label:
        text: "Relationships are precious. It may be between anyone. Please hold them tightly."
        text_size: self.size
        font_size: 50
        valign: "middle"
        color: hex('#FFFFFF')
      Button:
        text: "Start"
        font_size: 32
        color: hex('#FFFFFF')
        background_color: hex('#926F5B')
        on_press: app.sm.current = 'second'
        size_hint: 1, 0.25
  Screen:
    name: "second"
    BoxLayout:
      orientation: "vertical"
      #padding: 20, 20, 20, 20
      Label:
        text: "First Name"
        bold: "True"
        font_size: 32
        color: hex('#FFFFFF')
      TextInput:
        text: ""
        hint_text: "Insert alphabets only"
        multiline: False
        font_size: 32
      Label:
        text: "Second Name"
        bold: "True"
        font_size: 32
        color: hex('#FFFFFF')
      TextInput:
        text: ""
        hint_text: "Insert alphabets only"
        multiline: False
        font_size: 32
      Button:
        text: "Submit"
        font_size: 32
        color: hex('#FFFFFF')
        background_color: hex('#926F5B')
        on_press: app.sm.current = "third"
  Screen:
    name: "third"
    BoxLayout:
      orientation: "vertical"
      #padding: 20, 20, 20, 20
      Label:
        text: "Your Compatibility"
        bold: True
        underline: True
        font_size: 32
        color: hex('#FFFFFF')
      Label:
        text: "90%"
        font_size: 32
      Label:
        text: "Advice"
        bold: True
        underline: True
        font_size: 32
        color: hex('#FFFFFF')
      Label:
        text: "Good Choice!!"
        font_size: 32
      Button:
        text: "Return"
        font_size: 32
        color: hex('#FFFFFF')
        background_color: hex('#926F5B')
        on_press: app.sm.current = "second"
