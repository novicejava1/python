#:kivy 1.11.1

<MyWidget>:
	Label:
		text: 'My Learning Portal'
		pos: root.x + 300, root.top - 100
	Button:
		text: 'Start'
		pos: 100, 0
		size: 100, 50
		color: 0, 1, 0, 1
		font_size: 32
	Button:
		text: 'Reset'
		pos: 400, 0
		size: 100, 50
		color: 0, 1, 0, 1
		font_size: 32
	CheckBox:
		active: True
		pos: 200, 0
	CheckBox:
		active: False
		pos: 300, 0
	Image:
		source: 'appicon.png'
		pos: 250, 250
	Slider:
		orientation: 'vertical'
		min: -400
		max: 400
		step: 25
		pos: 0, 350
	ProgressBar:
		max: 500
		value: 250
	TextInput:
		text: 'Enter the Name'
		pos: 350, 350
	ToggleButton:
		text: 'Yes'
		pos: 75, 250
		group: 'answer'
	ToggleButton:
		text: 'No'
		pos: 350, 250
		group: 'answer'
