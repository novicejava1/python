#:kivy 1.11.1


<MyFloatLayout>:
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        RelativeLayout:
            size_hint: .15, 1
            BoxLayout:
                orientation: 'vertical'
                padding: 10, 10, 10, 10
                spacing: 10
                ToggleButton:
                    text: "Red"
                    group: "Color"
                    background_normal: ''
                    background_color: 1, 0, 0, 1
                ToggleButton:
                    text: "Green"
                    group: "Color"
                    background_normal: ''
                    background_color: 0, 1, 0, 1
                ToggleButton:
                    text: "Blue"
                    group: "Color"
                    background_normal: ''
                    background_color: 0, 0, 1, 1
                ToggleButton:
                    text: "Yellow"
                    group: "Color"
                    background_normal: ''
                    background_color: 1, 1, 0, 1
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        RelativeLayout:
            size_hint: .7, 1
            Label:
                canvas:
                    Rectangle:
                        size: self.size
                text: "Drawing Space"
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        RelativeLayout:
            size_hint: .15, 1
            BoxLayout:
                orientation: 'vertical'
                padding: 10, 10, 10, 10
                spacing: 10
                #size_hint: 1, .2
                #pos_hint: {'x': 0, 'y': .8}
                ToggleButton:
                    text: "Line"
                    group: "Color"
                    background_normal: ''
                    background_color: 0.25, 0.25, 0.25, 1
                ToggleButton:
                    text: "Circle"
                    group: "Color"
                    background_normal: ''
                    background_color: 0.25, 0.25, 0.25, 1
                ToggleButton:
                    text: "Curve"
                    group: "Color"
                    background_normal: ''
                    background_color: 0.25, 0.25, 0.25, 1
                ToggleButton:
                    text: "Pencil"
                    group: "Color"
                    background_normal: ''
                    background_color: 0.25, 0.25, 0.25, 1
