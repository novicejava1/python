#:kivy 1.11.1

<MyPageLayout>:

    roadimg: road
    fallimg: fall
    dropimg: drop
    canyonimg: canyon

    Label:
        canvas.before:
            Color:
                rgba: .75, .25, .25, 1
            Rectangle:
                size: self.size
                pos: self.pos
        text: "Welcome to the gallery of nature photos"
        font_size: 32
        bold: True
        italic: True
    GridLayout:
        cols: 2
        rows: 2
        padding: 50, 50, 50, 50
        spacing: 10
        canvas.before:
            Color:
                rgba: .75, .25, .25, 1
            Rectangle:
                size: self.size
                pos: self.pos
        MyImage:
            id: road
            source: 'road.jpg'
        MyImage:
            id: fall
            source: 'fall.jpg'
        MyImage:
            id: drop
            source: "drop.jpg"
        MyImage:
            id: canyon
            source: "canyon.jpg"
    Label:
        canvas.before:
            Color:
                rgba: .75, .25, .25, 1
            Rectangle:
                size: self.size
                pos: self.pos
        text: 'Thank you'
        font_size: 32
        bold: True

