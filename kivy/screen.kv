#:kivy 1.11.1

<MyBoxLayout@BoxLayout>:
  orientation: 'vertical'
  padding: 100

<Manager>:
  result: "msg"
  percentage: "per"
  Screen:
    name: 'first'
    MyBoxLayout:
      GridLayout:
        cols: 2
        Label:
          text: "First Name"
        TextInput:
          id: firstname
          text: "First Name"
          multiline: False
        Label:
          text: "Second Name"
        TextInput:
          id: secondname
          text: "Second Name"
          multiline: False
      Button:
        text: "Submit"
        on_press: root.results()
        on_release: app.sm.current = 'other'

  Screen:
    name: 'other'
    MyBoxLayout:
      Label:
        text: "Percentage"
      Label:
        id: per
        text: str(root.percentage)
        #text: "%"
      Label:
        text: "Message"
      Label:
        id: msg
        text: str(root.result)
        #text: "msg"
      Button:
        text:'go to first'
        on_press: app.sm.current = 'first'