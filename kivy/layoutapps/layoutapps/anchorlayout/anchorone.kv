#:kivy 1.11.1

<MyAnchorLayout>:
  AnchorLayout:
    anchor_x: 'left'
    anchor_y: 'top'
    GridLayout:
      cols: 2
      size_hint: None, None
      width: 100
      height: 500
      Button:
        text: "Python"
      Button:
        text: "Django"
  AnchorLayout:
    anchor_x: 'right'
    anchor_y: 'top'
    GridLayout:
      cols: 2
      size_hint: None, None
      width: 100
      Button:
        text: "HTML"
      Button:
        text: "CSS"
  AnchorLayout:
    anchor_x: 'center'
    anchor_y: 'bottom'
    GridLayout:
      cols: 2
      size_hint: None, None
      height: 50
      Button:
        text: "HTML"
      Button:
        text: "CSS"
