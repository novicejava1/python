#:kivy 1.11.1

<MyBoxLayout>:
  orientation: 'vertical'
  Label:
    text: "Learning Portal"
    font_size: 32
    size_hint_y: .25
    background_normal: ''
    background_color: 0.75, 0.75, 0, 1
  TextInput:
    text: "Insert text here"
  GridLayout:
    cols: 2
    size_hint_y: .25
    padding: 10, 10, 10, 10
    Button:
      text: "Submit"
      font_size: 32
      #background_normal: ''
      #background_color: 0.75, 0.75, 0, 1
    Button:
      text: "Reset"
      font_size: 32
      #background_normal: ''
      #background_color: 0.75, 0.75, 0, 1

